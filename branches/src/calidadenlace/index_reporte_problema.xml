							#colorbox{outline:0;}
							#cboxContent{margin-top:20px;background:#C3C3C3;}
							.cboxIframe{background:#fff;}
							#cboxError{padding:50px; border:1px solid #ccc;}
							#cboxLoadedContent{border:5px solid #fff; background:#fff;}
